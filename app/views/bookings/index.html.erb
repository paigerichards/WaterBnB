<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Guest</th>
      <th>Listing</th>
      <th>Check in at</th>
      <th>Check out at</th>
      <th>Guest count</th>
      <th>Stripe charge</th>
      <th>Special requirement</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.guest %></td>
        <td><%= booking.listing %></td>
        <td><%= booking.check_in_at %></td>
        <td><%= booking.check_out_at %></td>
        <td><%= booking.guest_count %></td>
        <td><%= booking.stripe_charge_id %></td>
        <td><%= booking.special_requirement %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

